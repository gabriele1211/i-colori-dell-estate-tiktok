    function goAmazon(url){
      // Aggiungi un semplice parametro per tracciare la provenienza da TikTok
      const sep = url.includes('?') ? '&' : '?';
      const tracked = url + sep + 'ref=mytiktok';
      // Prova ad aprire l'app Amazon; se non disponibile, resta sul browser
      window.location.href = tracked;
    }
